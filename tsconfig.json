{
  "compilerOptions": {
    "target": "ESNext",                 // Use a modern JS standard
    "module": "CommonJS",              // Compatible with Node.js (or "ESNext" for ESM projects)
    "declaration": true,               // Generate .d.ts type definition files
    "outDir": "./dist",                // Output files to the dist folder
    "strict": true,                    // Enable strict type checking
    "esModuleInterop": true,           // Support interop between CommonJS and ES Modules
    "skipLibCheck": true               // Skip checking the types of imported dependencies
  },
  "include": [
    "src/**/*.ts"                      // Include all TypeScript files in the src folder
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}